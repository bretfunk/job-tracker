<div class="container">
  <table class="table table-hover text-left">
    <thead>
      <tr>
        <th>Category Id</th>
        <th>Category Name</th>
          <th>Edit</th>
          <th>Delete</th>
        </tr>
      </thead>
      <tbody>

  <% @categories.each do |category| %>
  <tr>
    <div class="category_<%= category.id %>">
    <!-- <tr onclick="window.location.href = '/categories/<%= category.id %>';"> -->
    <td><h4><%= category.id %></td></h4>
    <td><h4><%= link_to category.name, category_path(category) %></td></h4>
    <td><h4><%= link_to "Edit", edit_category_path(category), class: "btn btn-primary" %></td></h4>
    <td><h4><%= link_to "Delete", category_path(category), method: :delete, class: "btn btn-danger" %></td></h4>
  </div>
  </tr>
  <% end %>
</tbody>
</table>
</div>
