<div class="jumbotron jumbotron-fluid">
  <div class="container">
    <h1 class="display-3">All Companies</h1>
  </div>
</div>



<div class="container">
  <table class="table table-hover text-left">
    <thead>
      <tr>
        <th><h4>Company ID</h4></th>
        <th><h4>Company Name</h4></th>
          <th><h4>Edit</h4></th>
          <th><h4>Delete</h4></th>
        </tr>
      </thead>
      <tbody>
  <% @companies.each do |company| %>
  <tr>
    <div class="company_<%= company.id %>">
    <!-- <tr onclick="window.location.href = '/companies/<%= company.id %>';"> -->
  <td><h4><%= company.id %></h4></td>
    <td><%= link_to company.name, company_path(company), class: "h3" %></td>
    <td><%= link_to "Edit", edit_company_path(company), class: "btn btn-primary" %></td>
    <td><%= link_to "Delete", company_path(company), method: "delete", class: "btn btn-danger" %></td>
  </div>
  </tr>
  <% end %>
</tbody>
</table>
</div>
