<h3>Add a Contact</h3>

<%= form_for [ @company, @contact ] do |f| %>
  <p>
    <%= f.label :fname %><br/>
    <%= f.text_field :fname %>
  </p>
  <p>
    <%= f.label :lname %><br/>
    <%= f.text_field :lname %>
  </p>
  <p>
    <%= f.label :position %><br/>
    <%= f.text_field :position %>
  </p>
  <p>
    <%= f.label :email %><br/>
    <%= f.text_field :email %>
  </p>

  <p>
    <%= f.submit 'Submit Contact' %>
  </p>
<% end %>
