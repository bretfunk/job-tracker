<div class="jumbotron jumbotron-fluid">
  <div class="container">
    <h1 class="display-3"><%= @job.title %></h1>
  </div>
</div>


<div class="container">
  <table class="table table-hover text-left">
    <thead>
      <tr>
        <th><h4>Description</h4></th>
          <th><h4>Interest</h4></th>
          <th><h4>Company</h4></th>
          <th><h4>City</h4></th>
          <th><h4>Category</h4></th>
          <th><h4>Profile</h4></th>
            <th><h4>Edit</h4></th>
            <th><h4>Delete</h4></th>
        </tr>
      </thead>
      <tbody>
  <tr>
    <div class="job_<%= @job.id %>">
  <td><h4><%= @job.description %></h4></td>
  <td><h4><%= @job.level_of_interest %></h4></td>
  <td><h4><%= @job.company.name %></h4></td>
  <td><h4><%= @job.city %></h4></td>
  <td><h4><%= @job.category.name %></h4></td>
    <td><%= link_to "Profile", job_path(@job), class: "btn btn-success" %></td>
    <td><%= link_to "Edit", edit_company_job_path(@job.company, @job), class: "btn btn-primary" %></td>
    <td><%= link_to "Delete", company_job_path(@job.company, @job), method: "delete", class: "btn btn-danger" %></td>
  </div>
  </tr>
</tbody>
</table>
</div>
<br>
<br>
<row class="btn-group-justified">
<%= link_to "Create a New Category", new_category_path, class: "btn btn-warning" %>
<%= link_to "Back to All Jobs", company_path(@job.company), class: "btn btn-info" %>
</row>
<h3>Comments (<%= @job.comments.size %>)</h3>
<%= render partial: 'jobs/comment', collection: @job.comments.reverse %>
<%= render partial: 'comments/form' %>
